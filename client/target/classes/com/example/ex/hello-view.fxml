<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ex.ClientController">

    <HBox VBox.vgrow="ALWAYS">
        <ListView fx:id="clientView" HBox.hgrow="ALWAYS"/>
        <ListView fx:id="serverView" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox>
        <Button maxWidth="Infinity" text="To Server" onAction="#upload" HBox.hgrow="ALWAYS"/>
        <Button maxWidth="Infinity" text="From Server" onAction="#download" HBox.hgrow="ALWAYS"/>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>


</VBox>
